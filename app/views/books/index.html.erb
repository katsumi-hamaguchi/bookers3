<html>
  <body>
    <div class="container">
    <div class="row">
  <div class='col-xs-3'>
    <%= render 'users/list', user: @user, book: @book %>
  </div>
  <div class='col-xs-9'>
    <h1>Books</h1>
       <table>
       	  <thead>
       	  <tr>
            <th></th>
       	    <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          	<% @books.each do |book| %>  
            <tr>

              
              <td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "100x100"%><% end %></td>
              <td><%= link_to book.title,book_path(book.id) %></td> 
              
              
              <td class="b"><%= book.body %></td>
              <td><%= link_to "Show",book_path(book.id) %></td> 
              

              
            </tr>
            <% end %>
          </tbody>
       </table>

      

      

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <ul>
           <% @book.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
          </ul>
        </div>
      <% end %>


    
   

</div>
</div>
</div>
  </body>
</html>
