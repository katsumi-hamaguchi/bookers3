<html>
  <body>
  <div class='col-xs-3'>
  <%= render 'users/list', user: @user, book: @book %>
</div>

    <h1>Books</h1>
       <table>
       	  <thead>
       	  <tr>
       	    <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          	<% @books.each do |book| %>  
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "100x100"%></td>
              <td><%= link_to book.title,book_path(book.id) %></td> 
              
              
              <td class="b"><%= book.body %></td>
              <td><%= link_to "Show",book_path(book.id) %></td> 
              

              
            </tr>
            <% end %>
          </tbody>
       </table>

      

       <h2>New book</h2>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
          <ul>
           <% @book.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
          </ul>
        </div>
      <% end %>


    
    <%= form_for(@book) do |f| %>
    <h4>Title<br>
      <%= f.text_field :title %><br>
      Opinion<br>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    </h4>
<% end %>
  </body>
</html>
