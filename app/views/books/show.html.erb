<html>
  <head></head>
  <body>
     <div class='col-xs-3'>
    <%= render 'users/list', user: @user, book: @book %>
  </div>
     <div class='col-xs-9'>
    <p id="notice"><%= notice %></p>
    
    <h2>Book detail</h2>
    <p>
      <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: "100x100"%>
      Title: <%= @book.title %> 
      Body: <%= @book.body %>

        <% if @book.user == current_user %>
        
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete %>

        <% end %>
    </p>
  </div>
  </body>
</html>
