<html>
  <head></head>
  <body>

    <p id="notice"><%= notice %></p>
    
    <h2>Book detail</h2>
    <p>
      Title: <%= @book.title %> 
      Body: <%= @book.body %> 
      <%= link_to "Edit", edit_book_path(@book.id) %>
    
      <%= link_to "Destroy", book_path(@book.id), method: :delete %>
    </p>


  

  <h2>New book</h2>

  <%= form_for(@newbook) do |f| %>
    <h4>Title<br>
      <%= f.text_field :title %><br>
      Opinion<br>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    </h4>


<% end %>
  </body>
</html>
