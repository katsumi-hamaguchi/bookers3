<html>
  <head></head>
  <body>

    <p id="notice"><%= notice %></p>
    
    <h2>Book detail</h2>
    <p>
      <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: "100x100"%>
      Title: <%= @book.title %> 
      Body: <%= @book.body %>

        <% if @book.user == current_user %>
        
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete %>

        <% end %>
    </p>


  

  <h2>New book</h2>

  <%= form_for(@newbook) do |f| %>
    <h4>Title<br>
      <%= f.text_field :title %><br>
      Opinion<br>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    </h4>


<% end %>
  </body>
</html>
