
<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100"%>

     <h2>New book</h2>

  <%= form_for(@book) do |f| %>
    <h4>Title<br>
      <%= f.text_field :title %><br>
      Body<br>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    </h4>
<% end %>

