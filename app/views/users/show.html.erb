<div class='container'>
  <div class='row'>
    <% if notice %>
    ã€€<p><%= notice %></p>
    <% end %>
    <% if alert %>
       <p><%= alert %></p>
    <% end %>

    <div class='col-xs-3'>
        <h1>User info</h1>

        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100"%>
        <div class="profile-container">
        <h3 class="profile-name"><%= @user.name %></h3>
        <h3 class="profile-opinion"><%= @user.introduction %></h3>
        

        <% if @user.id == current_user.id %>
            <p><%= link_to "dddd", edit_user_path(@user) %></p>

        <% end %>
        
         
        </div>
           <h2>New book</h2>

          <% if @book.errors.any? %>
            <div id="error_explanation">
              <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
              <ul>
               <% @book.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
               <% end %>
              </ul>
            </div>
          <% end %>
        <%= form_for(@book) do |f| %>
        <h4>Title<br>
          <%= f.text_field :title %><br>
          Body<br>
          <%= f.text_area :body %>
          <br><%= f.submit 'Create Book' %>
        </h4>
      <% end %>
    </div>
    <div class='col-xs-9'>
      <h1>Books</h1>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "100x100"%></td>
                <td><%= link_to book.title,book_path(book.id) %></td> 
                <td class="b"><%= book.body %></td>
              </tr>
            <% end %>
          </tbody> 
        </table>
  </div>
</div>